{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://todaysmeet.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, PUT, POST, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Keep Alive, Accept, Accept-Language, Authorization, Accept-Version, Content-Length, Content-MD5, Cookie, Content-Type, Date, X-Api-Version"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}
